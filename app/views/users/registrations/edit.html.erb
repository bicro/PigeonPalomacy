<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, :class=> "registration"}) do |f| %>
  <%= devise_error_messages! %>

  <div class="row">
    <div class="large-6 large-centered columns">
      <div class="registration-header row">
        <div class="large-12 columns">
          <h3 class="title op-8">Edit <%= resource_name.to_s.humanize %> Information</h3>
        </div>
      </div>
    </div>
    <div class="registration-container row">
      <div class="large-11 large-centered columns">
        <div class="registration-basic row clearfix">
          <div class="registration-basic-field large-6 columns">
            <div class="field">
              <%= f.label :name, class: "field_label" %>
              <%= f.text_field :name, autofocus: true, placeholder: "Victoria Bian" %>
            </div>
          </div>
          <div class="registration-basic-field large-6 columns">
            <div class="field">
              <%= f.label :email, class: "field_label" %>
              <%= f.email_field :email, autofocus: true, placeholder: "victoriabian@gmail.com" %>
            </div>
          </div>
          <div class="registration-basic-field large-6 columns">
            <div class="field">
              <%= f.label :phone, class: "field_label" %>
              <%= f.text_field :phone, autofocus: true, placeholder: "e.g. 510-333-2416" %>
            </div>
          </div>
        </div>
        <div class="registration-address row clearfix">
          <div class="registration-address-field large-6 columns">
            <div class="field">
              <%= f.label "address line 1", class: "field_label" %>
              <%= f.text_field :street_address_1, autofocus: true, placeholder: "2310 Dwight Way" %>
              <div class="reminder-text">
                Stree address, P.O. box, company name, c/o
              </div>
            </div>              
          </div>
          <div class="registration-address-field large-6 columns">
            <div class="field">
              <%= f.label "address line 2", class: "field_label" %>
              <%= f.text_field :street_address_2, autofocus: true, placeholder: "Unit 22" %>
              <div class="reminder-text">
                Apartment, suite, unit, building, floor, etc.
              </div>
            </div>            
          </div>          
        </div>
        <div class="registration-location row clearfix">
          <div class="registration-location-field large-6 columns">
            <div class="field">
              <%= f.label :city, class: "field_label" %>
              <%= f.text_field :city, placeholder: "Berkeley" %>
            </div>           
          </div>
          <div class="registration-location-field large-6 columns">
            <div class="field">
              <%= f.label :state, class: "field_label" %>
              <%= f.text_field :state, placeholder: "CA" %>
            </div>         
          </div>
        </div>
        <div class="registration-location row clearfix">
          <div class="registration-location-field large-6 columns">
            <div class="field">
              <%= f.label :zipcode, class: "field_label" %>
              <%= f.text_field :zipcode, placeholder: "94704" %>
            </div>         
          </div>
          <div class="registration-location-field large-6 columns">
            <div class="field">
              <%= f.label :country, class: "field_label" %>
              <%= f.text_field :country, placeholder: "USA" %>
            </div>        
          </div>              
        </div>
        <div class="registration-more row clearfix">
          <div class="registration-more-field">
            <div class="field">
              <%= f.label :preferred_contact, class: "field_label" %>
              <%= f.text_field :preferred_contact, placeholder: "Call" %>
            </div>
          </div>
          <div class="registration-more-field">
            <div class="field">
              <%= f.label "briefly describe your expertise", class: "field_label" %>
              <%= f.text_field :expertise_description %>
            </div>                
          </div>          
        </div>
        <div class="registration-basic row clearfix">
          <div class="registration-basic-field large-6 columns">
            <div class="field">
              <%= f.label :current_password , class: "field_label" %>
              <%= f.password_field :current_password, autocomplete: "off" %>
            </div>
          </div>
          <div class="registration-basic-field large-6 columns">
            <div class="field">
              <%= f.label :password, "New Password", class: "field_label" %>
              <%= f.password_field :password, autocomplete: "off" %>
              </div>
            </div>
          </div>
          <div class="registration-basic-field large-6 columns">
            <div class="field">
              <%= f.label :password_confirmation, class: "field_label" %>
              <%= f.password_field :password_confirmation, autocomplete: "off" %>
            </div>
          </div>
        </div>
        <div class="registration-action clearfix actions">
          <%= f.submit "Update", class: "button" %>
          <div class="registration-link">Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %><br /></div>
        </div>
      </div>     
    </div>
  </div>
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

<% end %>


