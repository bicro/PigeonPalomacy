<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "registration"}) do |f| %>
  <div class="row">
    <div class="large-6 large-centered columns">
      <div class="row">
        <div class="large-12 columns">
          <div class="title op-8">Become an expert for Palomacy</div>
        </div>
      </div>
      <div class="row">
        <div class="large-12 columns op-8">
          Thanks for volunteering to become an expert for Palomacy. There are lots of ways you can help! Let's start with introducing yourself.
        </div>
      </div>
      <div class=row>
        <div class="large-11 large-centered columns">
          <div class="row">
            <div class="large-12 columns">
              <%= devise_error_messages! %>
            </div>
          </div>
          <div class="row">
            <div class="large-6 columns">
              <div class="field">
                <%= f.label :name, class: "field_label required" %><br />
                <%= f.text_field :name, placeholder: "Victoria Bian", class: "registration-field-box-blue" %>
              </div>
            </div>
            <div class="large-6 columns">
              <div class="field">
                <%= f.label :email, class: "field_label required"%><br />
                <%= f.email_field :email, placeholder: "victoriabian@gmail.com", class: "registration-field-box-regular" %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="large-6 columns">
              <div class="field">
                <%= f.label :phone, class: "field_label required"%><br />
                <%= f.text_field :phone, placeholder: "e.g. 510-333-2416", class: "registration-field-box-red" %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="large-6 columns">
              <div class="field">
                <%= f.label :password, class: "field_label required"  %>
                <%= f.password_field :password, placeholder: "Password", autocomplete: "off", class: "registration-field-box-green"  %>
                <div class="reminder-text">
                  <% if @minimum_password_length %>
                    <%= @minimum_password_length %> characters minimum
                  <% end %><br />
                </div>
              </div>
            </div>
            <div class="large-6 columns">
              <div class="field">
                <%= f.label :password_confirmation, class: "field_label required"  %><br />
                <%= f.password_field :password_confirmation, placeholder: "Password Confirmation", autocomplete: "off", class: "registration-field-box-yellow" %>
              </div>
            </div>
          </div>
          <div class="field">
            <%= f.label :address_line_1, class: "field_label required"  %><br />
            <%= f.text_field :street_address_1, placeholder: "2310 Dwight Way", class: "registration-field-box-yellow" %>
            <div class="reminder-text">
              Stree address, P.O. box, company name, c/o
            </div>
          </div>
          <div class="field">
            <%= f.label "address line 2", class: "field_label"  %><br />
            <%= f.text_field :street_address_2, placeholder: "Unit 22", class: "registration-field-box-yellow" %>
            <div class="reminder-text">
              Apartment, suite, unit, building, floor, etc.
            </div>
          </div>
          <div class="field">
            <%= f.label :city, class: "field_label required"  %><br />
            <%= f.text_field :city, placeholder: "Berkeley", class: "registration-field-box-yellow" %>
          </div>
          <div class="field">
            <%= f.label :state, class: "field_label required"  %><br />
            <%= f.text_field :state, placeholder: "CA", class: "registration-field-box-yellow" %>
          </div>
          <div class="field">
            <%= f.label :zipcode, class: "field_label required"  %><br />
            <%= f.text_field :zipcode, placeholder: "94704", class: "registration-field-box-yellow" %>
          </div>
          <div class="field">
            <%= f.label :country, class: "field_label required"  %><br />
            <%= f.text_field :country, placeholder: "USA", class: "registration-field-box-yellow" %>
          </div>
          <div class="field">
            <%= f.label :preferred_contact, class: "field_label required"  %><br />
            <%= f.text_field :preferred_contact, placeholder: "Call", class: "registration-field-box-yellow" %>
          </div>
          <div class="field">
            <%= f.label "briefly describe your expertise", class: "field_label required"  %><br />
            <%= f.text_field :expertise_description, class: "registration-field-box-yellow" %>
          </div>
          <div class="actions">
            <%= f.submit "Submit", class: "button registration-button" %>
          </div>
          <%= render "users/shared/links" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
