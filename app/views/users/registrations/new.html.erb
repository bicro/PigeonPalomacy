<form class="registration">
  <div class="row">
    <div class="large-6 large-centered columns">
      <div class="row">
        <div class="large-12 columns">
          <div class="title">Become an expert for Palomacy</div>
        </div>
      </div>
      <div class="row">
        <div class="large-12 columns">
          Thanks for volunteer to become an expert for Palomacy. There are lots of ways you can help! Let's start with introducing yourself.
        </div>
      </div>
      <div class=row>
        <div class="large-11 large-centered columns">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>
            <div class="row">
              <div class="large-6 columns">
                <div class="field">
                  <%= f.label :name, class: "field_label required" %><br />
                  <%= f.text_field :name, placeholder: "Victoria Bian", class: "registration-field-box-blue" %>
                </div>
              </div>
              <div class="large-6 columns">
                <div class="field">
                  <%= f.label :email, class: "field_label required"%><br />
                  <%= f.email_field :email, placeholder: "victoriabian@gmail.com", class: "registration-field-box-white" %>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="large-6 columns">
                <div class="field">
                  <%= f.label :phone, class: "field_label required"%><br />
                  <%= f.text_field :phone, placeholder: "e.g. 510-333-2416", class: "registration-field-box-red" %>
                </div>
              </div>
              <div class="large-6 columns">
                <div class="field">
                  <%= f.label :address, class: "field_label required" %><br />
                  <%= f.text_field :address, autofocus: false, placeholder: "e.g. 2310 Dwight Way, Berkeley, CA 94704", class: "registration-field-box-gray" %>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="large-6 columns">
                <div class="field">
                  <%= f.label :password, class: "field_label required"  %>
                  <%= f.password_field :password, autocomplete: "off", class: "registration-field-box-green"  %>
                  <div class="reminder-text">
                    <% if @minimum_password_length %>
                      <%= @minimum_password_length %> characters minimum
                    <% end %><br />
                  </div>
                </div>
              </div>
              <div class="large-6 columns">
                <div class="field">
                  <%= f.label :password_confirmation, class: "field_label required"  %><br />
                  <%= f.password_field :password_confirmation, autocomplete: "off", class: "registration-field-box-yellow" %>
                </div>
              </div>
            </div>
            <div class="actions">
              <%= f.submit "Submit", class: "button registration-button" %>
            </div>
          <% end %>
          <%= render "users/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</form>
