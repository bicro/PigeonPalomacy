<form action="<%= submissions_path(@submission) %>" method="POST">
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <% @questions.each do |q| %>
      <%= render partial: "/questions/question", locals: {question: q} %>
      <ul class="answers">
          <% q.answers.each do |a| %>
            <li>
                <%= label_tag a.content %>
                <%= radio_button_tag q.id, a.id %>
            </li>
          <% end %>
      </ul>
  <% end %>
  <%= submit_tag "Find Expert" %>
</form>